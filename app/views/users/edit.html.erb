<h2>User info</h2>
<%= form_for(@user) do |f| %>
    <label>Name</label>
      <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前"%>
    <label>Image</label>
      <%= f.attachment_field :profile_image %>
    <label>Introduction</label>
      <%= f.text_area :introduction, autofocus: true, class:"form-control", placeholder:"紹介文"%>
    <%= f.submit "Update User" %>
<% end %>
