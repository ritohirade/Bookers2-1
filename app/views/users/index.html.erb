<div class='row'>
<div class='col-xs-3'>
<div class="userInfo">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-available.png", size: '200x200' %>
  <%= @user.name %>
  <%= @user.introduction %>
  <div class="editUser">
    <% if current_user == @user %>
     <%= link_to edit_user_path(@user) do %>
      <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_8282" href="/users/8282/edit"></span>
     <% end %>
    <% else %>
     <%= link_to "プロフィールを編集" , user_path(current_user) %>
    <% end %>
  </div>
</div>
<div class="newBook">
  <h2>New Book</h2>
  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create book' %>
  <% end %>
</div>
</div>
</div>
<div class='col-xs-9'>
<h2>Users</h2>
<table class="table">
  <tr>
    <td><strong>image</strong></td>
    <td><strong>name</strong></td>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-available.png", size: '80x80' %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show",  user_path(user) %></td>
  </tr>
  <% end %>
</table>
</div>
