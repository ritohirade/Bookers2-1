<div class="userInfo">
  <h2>User info</h2>
  <%= @user.name %>
  <%= @user.introduction %>
  <div class="editUser">
    <%= link_to "profile_edit" , edit_user_path(@user)%>
  </div>
</div>
<div class="newBook">
  <h2>New Book</h2>
  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create book' %>
  <% end %>
</div>
<div class="bookDetail">
  <h2>Book Detail</h2>
  <table rules="rows">
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", books_path, method: :delete %></td>
    </tr>
    <% end %>
  </table>
</div>
