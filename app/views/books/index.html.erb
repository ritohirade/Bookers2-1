<div class="userInfo">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
  <%= @user.name %>
  <%= @user.introduction %>
  <div class="editUser">
    <% if current_user == @user %>
      <%= link_to "profile_edit" , edit_user_path(@user)%>
    <% end %>
  </div>
</div>
<div class="newBook">
  <h2>New Book</h2>
  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create book' %>
  <% end %>
</div>
<div class="Books">
  <h2>Books</h2>
  <table rules="rows">
    <tr>
      <td><strong>Title</strong></td>
      <td><strong>Opinion</strong></td>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book_path(book) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
</div>
